<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/kidsDark"
    tools:context="com.example.android.quiz_app_abnd_project.kids">


    <RelativeLayout
        android:id="@+id/headerTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/min"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/timer_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/kidsText"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/colon"
            android:layout_width="40dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/min"
            android:gravity="center"
            android:text=" : "
            android:textColor="@color/kidsText"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/sec"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/colon"
            android:background="@drawable/timer_bg"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/kidsText"
            android:textSize="35sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/headerTimer"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-->********************QUESTION 1**************************<-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/kids"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/q1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A jellyfish is 95% water."
                        android:textColor="@color/kidsText"
                        android:textSize="18sp"

                        />

                    <RadioGroup
                        android:id="@+id/rg1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/q1o1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="True"
                            android:textColor="@color/kidsText" />

                        <RadioButton
                            android:id="@+id/q1o2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150dp"
                            android:buttonTint="@color/kidsDark"
                            android:text="False"
                            android:textColor="@color/kidsText" />


                    </RadioGroup>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-->********************QUESTION 2**************************<-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/kids"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/q2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How many players are there in an ice hockey team?"
                        android:textColor="@color/kidsText"
                        android:textSize="18sp"

                        />

                    <RadioGroup
                        android:id="@+id/rg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/q2o1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="Eleven"
                            android:textColor="@color/kidsText" />

                        <RadioButton
                            android:id="@+id/q2o2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="43dp"
                            android:buttonTint="@color/kidsDark"
                            android:text="Six"
                            android:textColor="@color/kidsText" />

                        <RadioButton
                            android:id="@+id/q2o3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="43dp"
                            android:buttonTint="@color/kidsDark"
                            android:text="Nine"
                            android:textColor="@color/kidsText" />


                    </RadioGroup>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-->********************QUESTION 3**************************<-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/kids"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/q3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Which grows quicker, Hair or toenails?"
                        android:textColor="@color/kidsText"
                        android:textSize="18sp"

                        />

                    <EditText
                        android:id="@+id/q3o"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/kidsDark"
                        android:gravity="center"
                        android:textColor="@color/kidsText"
                        android:textSize="13sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-->********************QUESTION 4**************************<-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/kids"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/q4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What do you see in this picture?"
                        android:textColor="@color/kidsText"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/picture"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/kids_pic" />

                        <CheckBox
                            android:id="@+id/q4o1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@id/picture"
                            android:buttonTint="@color/kidsDark"
                            android:text="Stars"
                            android:textColor="@color/kidsText" />

                        <CheckBox
                            android:id="@+id/q4o2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/q4o1"
                            android:layout_toRightOf="@id/picture"
                            android:buttonTint="@color/kidsDark"
                            android:text="Bat"
                            android:textColor="@color/kidsText" />

                        <CheckBox
                            android:id="@+id/q4o3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/q4o2"
                            android:layout_toRightOf="@id/picture"
                            android:buttonTint="@color/kidsDark"
                            android:text="Elephant"
                            android:textColor="@color/kidsText" />

                        <CheckBox
                            android:id="@+id/q4o4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/q4o3"
                            android:layout_toRightOf="@id/picture"
                            android:buttonTint="@color/kidsDark"
                            android:text="Mushroom"
                            android:textColor="@color/kidsText" />

                        <CheckBox
                            android:id="@+id/q4o5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/q4o4"
                            android:layout_toRightOf="@id/picture"
                            android:buttonTint="@color/kidsDark"
                            android:text="Owl"
                            android:textColor="@color/kidsText" />


                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-->********************QUESTION 5********************<-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/kids"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/q5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="What type of whale is the biggest animal in the world?"
                        android:textColor="@color/kidsText"
                        android:textSize="18sp"

                        />

                    <RadioGroup
                        android:id="@+id/rg3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RadioButton

                            android:id="@+id/q5o1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="White Whale"
                            android:textColor="@color/kidsText" />

                        <RadioButton
                            android:id="@+id/q5o2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="Blue Whale"
                            android:textColor="@color/kidsText" />

                        <RadioButton
                            android:id="@+id/q5o3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="Black Whale"
                            android:textColor="@color/kidsText" />

                    </RadioGroup>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <!-->********************QUESTION 6********************<-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/kids"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/q6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Which is the tallest mountain in the world?"
                        android:textColor="@color/kidsText"
                        android:textSize="18sp"

                        />

                    <RadioGroup
                        android:id="@+id/rg4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <RadioButton

                            android:id="@+id/q6o1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="Mount Fuji"
                            android:textColor="@color/kidsText" />

                        <RadioButton
                            android:id="@+id/q6o2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="Mount Everest"
                            android:textColor="@color/kidsText" />

                        <RadioButton
                            android:id="@+id/q6o3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/kidsDark"
                            android:text="Mount Kita"
                            android:textColor="@color/kidsText" />

                    </RadioGroup>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/kids"
                android:elevation="5dp"
                android:onClick="CalcScore"
                android:text="SUBMIT"
                android:textColor="@color/kidsText" />

        </LinearLayout>


    </ScrollView>

</RelativeLayout>


